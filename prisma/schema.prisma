datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}
model User {
  id             String    @id @default(cuid())
  email          String    @unique
  hashedPassword String
  createdAt      DateTime  @default(now())
}
model Customer {
  id        String   @id @default(cuid())
  name      String   @unique
  phone     String?  @unique 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  orders    Order[]
}

model Order {
  id          String    @id @default(cuid())
  customer    Customer  @relation(fields: [customerId], references: [id])
  customerId  String
  mediaType   String
  status      String
  width       Float     @default(0)
  height      Float     @default(0)
  quantity    Int       @default(1)
  rate        Float     @default(0)
  totalAmount Float
  // NEW: Field to track the sum of all payments made for this order
  paidAmount  Float     @default(0)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  // NEW: An order can have many payments
  payments    Payment[]
}

// NEW: A model to store each individual payment transaction
model Payment {
  id        String   @id @default(cuid())
  amount    Float
  method    String // e.g., "Cash", "Card", "Bank Transfer"
  createdAt DateTime @default(now())
  
  order     Order    @relation(fields: [orderId], references: [id])
  orderId   String
}
model MediaType {
  id   String @id @default(cuid())
  name String @unique
}